# Application Environment
APP_NAME="DaurixSkills"
APP_ENV=development
APP_URL=http://localhost:8080
APP_KEY=base64:YourAppKeyHereGenerateWithRandomBytes

# Database Connection
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=daurix_db
DB_USERNAME=daurix_user
DB_PASSWORD=daurix_pass

# Redis Connection
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# JWT Secret for API Authentication
# Use a long, random string for production
JWT_SECRET="your-super-secret-jwt-key"
JWT_EXPIRATION=3600 # 1 hour in seconds

# OpenAI-Compatible API for Zahra AI
OPENAI_API_KEY="your-openai-api-key"
OPENAI_API_BASE_URL="https://api.openai.com/v1"

# Mailer Settings (for SMTP)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@daurix.local"
MAIL_FROM_NAME="${APP_NAME}"
